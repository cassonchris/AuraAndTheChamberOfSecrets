@model AuraAndTheChamberOfSecrets.ViewModels.Question.AskViewModel

@{
    ViewData["Title"] = "Ask a question";
}

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <form asp-action="Ask" method="post" class="form">
            <input type="hidden" asp-for="Question.Username" />
            <div class="form-group">
                <label asp-for="Question.QuestionText"></label>
                <textarea asp-for="Question.QuestionText"></textarea>
                <span asp-validation-for="Question.QuestionText"></span>
            </div>
            <button type="submit" class="btn btn-primary">Ask Question</button>
        </form>
    </div>
</div>