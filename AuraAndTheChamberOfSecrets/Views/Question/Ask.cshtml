@model AuraAndTheChamberOfSecrets.ViewModels.Question.AskViewModel

@{
    ViewData["Title"] = "Ask a question";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <form asp-action="Ask" method="post" class="form">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input type="text" asp-for="Title" class="form-control"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QuestionText"></label>
                    <!-- todo - add markdown support, or other format that supports code styling -->
                    <textarea asp-for="QuestionText" class="form-control"></textarea>
                    <span asp-validation-for="QuestionText" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Ask Question</button>
            </form>
        </div>
    </div>
</div>