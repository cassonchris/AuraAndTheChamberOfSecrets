@using AuraAndTheChamberOfSecrets.ViewModels.Account
@model ExternalLoginViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h2>@ViewData["Title"]</h2>
            <p>
                You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.
                Please confirm your name and select a username.
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Firstname"></label>
                    <input asp-for="Firstname" class="form-control" />
                    <span asp-validation-for="Firstname"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Lastname"></label>
                    <input asp-for="Lastname" class="form-control" />
                    <span asp-validation-for="Lastname"></span>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>
